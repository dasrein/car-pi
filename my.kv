# Filename: my.kv
#:import br brightness

<Button>:
    font_size: 16
    size_hint: 0.2, 0.2
    background_color: 0.23, 0.83, 0.23, 1
<MyLayout>:
    Button:
        text:"Play"
        pos_hint: {"x":0.1, "y":0.2}
    Button:
        text:"Pause"
        pos_hint: {"x":0.3, "y":0.2}
    Button:
        text:"Shuffle"
        pos_hint: {"x":0.5, "y":0.2}
    Button:
        text:"Repeat"
        pos_hint: {"x":0.7, "y":0.2}
    Slider:
        orientation: "vertical"
        min: 0
        max: 100
        value: 30
        on_value:label1.text = "Volume " + str(int(self.value))
        pos_hint: {"center_x":0.6, "center_y":0.7}
        size_hint: 0.3, 0.4
    Slider:
        orientation: "vertical"
        min: 0
        max: 100
        value: 50
        on_value:label2.text = "Brightness " + str(int(self.value))
        on_value:br.write_value(str(int(self.value)))
        pos_hint: {"center_x":0.8, "center_y":0.7}
        size_hint: 0.3, 0.4
    Label:
        id: label1
        font_size: 24
        text:"Volume 0"
        pos_hint: {"center_x": 0.6, "center_y":0.95}
        size_hint: 0.3, 0.3
    Label:
        id: label2
        font_size:24
        text: "Brightness 0"
        pos_hint: {"center_x": 0.8, "center_y": 0.95}
